<div class="posts-container">
<div class="f-card {{#if (isEven @index)}}right{{else}}left{{/if}}">
  <div class="header">
    <div class="options"><i class="fa fa-chevron-down"></i></div>
    <img class="co-logo" src="/assets/blogger.svg" />
    <div class="co-name"><a href="#">{{user.username}}</a></div>
    <div class="time"><a href="#">{{{format_date date}}}</a> Â· <i class="fa fa-globe"></i></div>
  </div>
  <div class="content">
    <h2 data-blog-id="{{id}}">{{title}}</h2>
  </div>
  <link rel="stylesheet" href="{{stylesheets}}">

  <div class="reference">
{{#each (appendImages images)}}
    <img class="reference-thumb" src="{{this.src}}" alt="Image Description" />
{{/each}}
    <div class="reference-content">
      <div class="reference-title">A quick and simple image placeholder service. | PLACEHOLDER.it</div>
      <div class="reference-subtitle">{{content}}</div>
      
      <div class="reference-font">placeholder.it</div>
    </div>
  </div>
<div class="social">
    <div class="btn-group" role="group" aria-label="Post Actions">
      <!-- Comment Button -->
      <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#commentsCollapse{{id}}" aria-expanded="false" aria-controls="commentsCollapse{{id}}">
        <i class="fa fa-comment"></i> Comment
      </button>

      <!-- Share Button -->
      <button class="btn btn-link">
        <i class="fa fa-share"></i> Share
      </button>

      <!-- Voting Buttons -->
      <button class="btn btn-link upvote-button" data-id="{{id}}">ğŸ‘ <span class="upvote-count">{{upVotes}}</span></button>
      <button class="btn btn-link downvote-button" data-id="{{id}}">ğŸ‘ <span class="downvote-count">{{downVotes}}</span></button>

      <!-- Edit and Delete Buttons -->
      {{> editpost id=this.id}}
      {{> deletepost id=this.id}}
    </div>

    <!-- Collapsible Area for Comments -->
    <div class="collapse" id="commentsCollapse{{id}}">
      <div class="card card-body">
        <!-- Placeholder for comment content or a partial template -->
        {{> comment}}
      </div>
    </div>
  </div>
</div>
</div>
