<article>
    <h2><a "/blogs/{{id}}">{{title}}</a></h2>
    <p>{{content}}</p>
    <p><a href="/upvote/{{id}}" method="POST">ğŸ‘</a> {{upVotes}} | {{downVotes}} <a href="/downvote/{{id}}" method="POST">ğŸ‘</a>
    </p>

    <p>Posted on: {{date}}</p>
    
    {{#if loggedIn}}
        <a href="/blogs/{{id}}">Edit</a>
        <form action="/blogs/{{id}}?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
    {{/if}}

    {{!-- Comments section --}}
    {{#if comments}}
        <section>
            <h2>Comments</h2>
            <ul>
                {{#each comments as |comment|}}
                    <li>{{comment.commentText}} - {{comment.dateCreated}}</li>
                {{/each}}
            </ul>
            <form action="/comment" method="post">
                <textarea name="commentText" required></textarea>
                <input type="hidden" name="blogPostId" value="{{id}}">
                <button type="submit">Submit Comment</button>
            </form>
        </section>
    {{else}}
        <p>No comments yet. Be the first to comment!</p>
                    <form action="/comment" method="post">
                <textarea name="commentText" required></textarea>
                <button type="submit">Submit Comment</button>
            </form>
    {{/if}}
</article>
