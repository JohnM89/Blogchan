{{#if post.Comments}}
    <section>
        <h2>Comments</h2>
        <ul>
            {{#each post.Comments as |comment|}}
                <li>
                    <p>{{comment.commentText}}</p>
                    <p>Posted by: User {{comment.authorId}} on {{comment.dateCreated}}</p>
                    <p>Upvotes: {{comment.upVotes}}, Downvotes: {{comment.downVotes}}</p>
                </li>
            {{/each}}
        </ul>
    </section>
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/if}}

{{#if loggedIn}}
    <!-- Assuming you have a route and form setup for submitting comments -->
    <section>
        <h3>Leave a Comment</h3>
        <form action="/path-to-submit-comment" method="post">
            <textarea name="commentText" required></textarea>
            <input type="hidden" name="blogPostId" value="{{post.id}}">
            <button type="submit">Submit Comment</button>
        </form>
    </section>
{{/if}}
