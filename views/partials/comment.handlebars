
<section class="comments-wrapper">
    <h3>Comments</h3>
    <div class="comments-list">
    <ul>
        {{#each comments as |comment|}}
           <li>
    <span class="comment-text">{{comment.commentText}}</span> - 
    <span class="date-value">{{{format_date comment.dateCreated}}}</span> - 
    <span class="author-name">{{user.username}}</span>
            </li>

        {{/each}}
    </ul>
    </div>
    {{#if comments.length}}
        {{else}}
            <p>No comments yet. Be the first to comment!</p>
    {{/if}}
    <form action="/api/comment" method="post">
       <textarea name="commentText" class="comment-input" required></textarea>
        <input type="hidden" name="blogPostId" value="{{id}}">
        <button type="submit">Submit Comment</button>
    </form>
</section>
