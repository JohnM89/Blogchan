<header>
    <h1>Welcome to the Blog!</h1>
    <p>Sign in to make a blog post!</p>
    <nav>
        {{#if loggedIn}}
        <form action="/api/signout" method="post">
        <button type="submit" class="button-like">Sign Out</button>
        </form>

            <a href="/blogs/new" class="button-like">Create a New Blog Post</a>
        {{else}}
            <a href="/signin">Sign In</a>
            <a href="/signup">Sign Up</a>
        {{/if}}
    </nav>
</header>
<section>
    <div>
    {{#each posts}}
        {{> blogpost}}

    <div class="vote-buttons">
    <button class="upvote-button" data-id="{{id}}">üëç <span class="upvote-count">{{upVotes}}</span></button>
    <button class="downvote-button" data-id="{{id}}">üëé <span class="downvote-count">{{downVotes}}</span></button>
    </div>
    
    <div class="comment-section">
        {{> comment}}
    </div>
    
  

    <div class="edit-delete-buttons">
{{> deletepost id=this.id}}
{{> editpost id=this.id}}
    </div>
</div>
        
    {{/each}}
       
</section>
<footer>
