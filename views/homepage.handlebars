    <h1>Welcome to the Blog!</h1>
    <p>Sign in to make a blog post!</p>
    <nav>
        {{#if loggedIn}}
            <form action="/signout" method="post">
        <button type="submit">Sign Out</button>
        </form>
            <button><a href="/blogs/new">Create a New Blog Post</a></button>
